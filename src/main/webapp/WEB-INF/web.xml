<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <!-- Configuração para a página do Menu após o Login -->
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <jsp-file>/menu.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArranchamentoServlet</servlet-name>
        <!--<jsp-file>/arranchamento.jsp</jsp-file>-->
        <servlet-class>arranchamento.servlet.ArranchamentoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArranchamentoServlet</servlet-name>
        <url-pattern>/arranchamento</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>arranchamento.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RefeicaoServlet</servlet-name>
        <!--<jsp-file>/arranchamento.jsp</jsp-file>-->
        <servlet-class>arranchamento.servlet.RefeicaoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RefeicaoServlet</servlet-name>
        <url-pattern>/reficao</url-pattern>
    </servlet-mapping>
</web-app>